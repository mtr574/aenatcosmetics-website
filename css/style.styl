@import 'nib'

// Pixel to rem converter

$base_font_size = 16
$px = ( 1 / $base_font_size ) rem

px( val, base = "none" )
	if base == "none"
		( val / $base_font_size ) rem
	else
		( val / base ) em


fixed_centered()
	position absolute
	top 50%
	left 50%
	margin-left (@width / 2) * -1
	margin-top (@height / 2) * -1
	
relative_centered()
	top 50%
	transform translateY(-50%)

relative_centered_2()
	left 50%
	transform translateX(-50%)

h_centered_1()
	left 0
	right 0
	margin: 0 auto;

h_centered_2()
	left 50%
	

// Golden Ratio 
$phi = 1.618
$golden_major = 0.618
$golden_minor = 0.382

step($start, $steps, $multiplier = $start, $unit="none")
	for i in (1..$steps)
		$start = $start*$multiplier
	if $unit != "none"
		unit($start, $unit)
	else
		$start


