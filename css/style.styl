/* Intro */

#intro
	width 100%
	height 100%
	position absolute
	top 0
	z-index 12
	border 40*$px solid $frame_color
	background-color $bg_dark_color
	
	&.loaded
		animation animLoadedHeader 1.5s cubic-bezier(0.7,0,0.3,1) forwards;
	
	.logo 
		background-image url(../img/logo-intro.png) 
		background-position center center
		background-repeat no-repeat
		background-size contain
		width 252*$px
		height 252*$px
		fixed_centered()
		animation bounceInUp 2s
		
	.loading
		width 60*$px
		height 60*$px
		position absolute
		left 0
		right 0	
		margin 0 auto
		bottom 20%
		text-align center
		animation bounceInUp 3s
		
		.loader1
			position relative
			width 100%
			height 100%
			border-radius 50%
			border-top: 2*$px solid $preload_bg_color
			border-right: 2*$px solid $preload_bg_color
			border-bottom: 2*$px solid $preload_bg_color
			border-left: 2*$px solid $frame_color
			animation load1 1.1s infinite linear

			&:after
				width 100%
				height 100%
				border-radius 50%
		
		.loader2
			background-color $preload_bg_color
			position relative
			transform translateZ(0)
			animation-delay -0.16s
			animation load2 1s infinite ease-in-out
			width 2*$px
			height 6*$px
			margin 0 auto
			
			&:after, &:before
				position absolute
				top 0
				content ''
				background-color $preload_bg_color
				animation load2 1s infinite ease-in-out
				width 2*$px
				height 6*$px
			
			&:after
				left 4*$px
			
			&:before
				left -4*$px
				animation-delay	-0.32s
		
		.loader3
			border-radius 50%
			width 10*$px
			height 10*$px
			margin 0 auto
			animation-fill-mode both
			animation load3 1.8s infinite ease-in-out
			position relative
			transform translateZ(0)
			animation-delay -0.16s
			
			&:before, &:after
				border-radius 50%
				width 10*$px
				height 10*$px
				animation-fill-mode both
				animation load3 1.8s infinite ease-in-out
				position absolute
				top 0
				content ''
			
			&:before
				left -15*$px
				animation-delay -0.32s

			&:after
				left 15*$px

/* Intro Animations */

@keyframes animLoadedHeader
	to 
		transform: translate3d(0,-100%,0)

@keyframes load1 
	0%
		transform rotate(0deg)
	100% 
		transform rotate(360deg)

@keyframes load2
	0%, 80%, 100%
		box-shadow 0 0 $preload_bg_color
		height 3*$px
	40%
		box-shadow 0 -12*$px $preload_bg_color
		height 12*$px

@keyframes load3
	0%, 80%, 100%
		box-shadow 0 15*$px 0 -10*$px $preload_bg_color

	40%
		box-shadow 0 15*$px 0 0 $preload_bg_color

