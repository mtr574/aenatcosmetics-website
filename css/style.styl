/* Horizontal Sub-Menu */
.menu-horizontal
	display table
	text-align center
	width 100%
	position relative

	ul
		margin 0
		padding 0
		line-height 0
		font-size 0
		
		li
			display inline-block
			height 100%
			line-height $header_height
			
			&:hover > a:before
				opacity 1
				animation fadeInDown 0.5s
			a
				text-decoration none
				color $font_dark_color
				cursor pointer
				padding 0 15*$px
				height 100%
				display block
				font-family $font_nav
				font-weight 700
				font-size 11*$px
				letter-spacing 0.55*$px
				text-transform uppercase
				position relative
				
				&.active,
				&.activeparent
					&:before
						opacity 1
						animation fadeInDown 0.5s
										
				&:before
					content ''
					display block
					position absolute
					bottom 0
					left 0
					width 100%
					height 2*$px
					background-color $font_dark_color
					opacity 0

			&:hover > .sub-menu
				visibility visible
				opacity 1
			
			.sub-menu
				visibility hidden
				opacity 0
				position absolute
				background-color $bg_dark_color
				border-bottom 1px solid alpha($frame_color,0.3)
				left 0
				$leftrem = @left * 2
				width 100%
				text-align center
				line-height 50*$px
				bottom $header_height
				font-size 10*$px
				transition opacity 1s ease-out, visibility 0.1s 0.1s linear

				a
					color $font_light_color
					
					&:before
						background-color $font_light_color
						bottom -2*$px

				li
					line-height 50*$px

					&:hover > .sub-menu
						visibility visible
						opacity 1
				
				.sub-menu
					visibility hidden
					opacity 0
					position absolute
					background-color $bg_dark_color
					border-top 1px solid alpha($frame_color,0.3)
					left 0
					$leftrem = @left * 2
					width 100%
					text-align center
					line-height 50*$px
					bottom 0
